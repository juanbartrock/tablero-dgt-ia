{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/cron/init-db",
      "schedule": "0 0 * * *"
    }
  ],
  "build": {
    "env": {
      "NEXT_PUBLIC_VERCEL_ENV": "production"
    }
  },
  "functions": {
    "app/api/analyze-emails/route.ts": {
      "memory": 3008,
      "maxDuration": 60
    }
  }
} 